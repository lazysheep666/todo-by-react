
#container
  margin: 100px auto
  padding: 20px
  width: 600px
  border: 2px solid #eee
  border-radius: 5px
  background-color: #fff
  #app-title
    text-align: center
    color: #49b1f5
  .add-todo
    text-align: center
    input
      width: 100%
      height: 30px
      outline: 0
      border: 2px solid #49b1f5
      border-radius: 5px
      font-size: 16px
  .todo-list
    margin: 30px 0
    padding: 0
    list-style: none
    border: 2px solid #49b1f5
    border-radius: 5px
    .todo
      display: flex
      justify-content: space-between
      padding: 10px 5px
      height: 30px
      border-bottom: 2px solid #49b1f5
      line-height: 30px
      &:last-child
        border-bottom: 0
      &-name
        cursor: pointer
      &-delete
        color: #c9c9c9
        cursor: pointer
    .completed
        opacity: 0.6
        text-decoration: line-through
  .footer
    display: flex
    justify-content: space-between
    height: 40px
    .fliter
      border: 2px solid #eee
      border-radius: 5px
      div 
        display: inline-block
        padding: 0 5px
        border-right: 2px solid #eee
        line-height: 40px
        cursor: pointer

