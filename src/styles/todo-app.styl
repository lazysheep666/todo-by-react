#container
  margin: 100px auto
  padding: 20px
  width: 600px
  border: 2px solid #eee
  border-radius: 5px
  background-color: #fff
  #app-title
    text-align: center
    color: #49b1f5
  .add-todo
    text-align: center
    input
      box-sizing: border-box
      width: 100%
      height: 30px
      outline: 0
      border: 2px solid #49b1f5
      border-radius: 5px
      font-size: 16px
  .tabs
    list-style: none
    padding: 0
    margin: 30px 0 0 0
    .tab
      display: inline-block
      margin-right: 15px
      padding: 10px 5px
      border: 2px solid #49b1f5
      border-bottom: 0px
      border-top-right-radius: 5px
      border-top-left-radius: 5px
      color: #49b1f5
      cursor: pointer
    .active
      background-color: #49b1f5
      color: #fff
  .todo-list
    margin: 0 0 30px 0
    padding: 0
    min-height: 50px
    list-style: none
    border: 2px solid #49b1f5
    border-radius: 5px
    border-top-right-radius: 0px
    border-top-left-radius: 0px
    .todo
      display: flex
      justify-content: space-between
      padding: 10px 5px
      height: 30px
      border-bottom: 2px solid #49b1f5
      line-height: 30px
      &:last-child
        border-bottom: 0
      &-name
        cursor: pointer
      &-delete
        color: #c9c9c9
        cursor: pointer
    .completed
        opacity: 0.6
        text-decoration: line-through
    .none
      color: #c9c9c9 
  .footer
    height: 40px
    button
      border: 1px solid #ef0101
      border-radius: 5px
      background-color: #ef0101
      color: #fff
      font-size: 14px
      &:hover
        background-color: #e85757

